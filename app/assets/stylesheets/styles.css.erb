body {
  font-family: Avenir;
  margin: 0;
}

#forms {
  text-align: right;
  color: black;
  height: 90px;
  width: auto;
}

#sign-up {
  padding: 10px;
}

#sign-in {
  padding: 10px;
}

#first-header {
  background-image: url(<%= asset_path 'music_wallpaper.jpg' %>);
  background-color: black;
  background-attachment: absolute;
  background-size: 1050px;
  background-position: center;
  background-repeat: no-repeat;
  height: 300px;
  width: auto;
}

#logo {
  text-align: center;
  font-family: Avenir;
  color: grey;
}

#squares {
  text-align: center;
}

.square {
  padding: 5px;
  border-radius: 50%;
  border-width: 3px;
}
