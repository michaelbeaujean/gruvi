body {
  font-family: Avenir;
  margin: 0;
}

#forms {
  text-align: right;
  color: black;
  height: 90px;
  width: auto;
}

#sign-up {
  padding: 10px;
}

#sign-in {
  padding: 10px;
}

#first-header {
  background-image: url(<%= asset_path 'music-visualization.jpg' %>);
  background-color: black;
  background-attachment: absolute;
  background-size: 1050px;
  background-position: center;
  background-repeat: no-repeat;
  height: 300px;
  width: auto;
}

#logo {
  text-align: center;
  font-family: Avenir;
  color: grey;
  /*margin: 0 auto;*/
}

#gameplay-box {
  text-align : center;
  position: fixed;
  left: 48%;
}

#squares {
  text-align: center;
}

.square {
  padding: 5px;
  border-radius: 50%;
  width: 140px;
  height: 140px;
  border: 3px black solid;
  display: inline-block;
}

#score {
  padding: 20px;
  position: fixed;
}
