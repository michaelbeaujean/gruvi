body {
  font-family: Avenir;
  margin: 0;
}

#forms {
  text-align: right;
  color: black;
  height: 90px;
  width: auto;
}

#sign-up {
  padding: 10px;
}

#sign-in {
  padding: 10px;
}

#first-header {
  background-image: url(<%= asset_path 'music-visualization.jpg' %>);
  background-color: black;
  background-attachment: absolute;
  background-size: 1050px;
  background-position: center;
  background-repeat: no-repeat;
  height: 300px;
  width: auto;
}

#logo {
  text-align: center;
  font-family: Avenir;
  color: grey;
  /*margin: 0 auto;*/
}

#game-messages {
  display: inline;
  text-align: center;
}

#start-game {
  text-align: center;
  position: absolute;
  bottom: 250px;
  width: 100%;
  margin: 0 auto;
  display: inline;
}

#gameplay-box {
  position: absolute;
  bottom: 250px;
  /*text-align : center;*/
  width: 100%;
  margin: 0 auto;
}

#squares-wrapper {
  width: 90%;
  margin: 0 auto;
}

#squares {
  text-align: center;
  margin: 0 auto;
  position: absolute;
  bottom: 50px;
}

.square {
  padding: 5px;
  border-radius: 50%;
  width: 140px;
  height: 140px;
  border: 3px black solid;
  display: inline-block;
}

#score {
  text-align: left;
  padding: 20px;
}


