body {
  font-family: Avenir;
  margin: 0;
  background: black;
  color: white;
}

/*Sign Up Form */

#forms {
  text-align: right;
  color: white;
  height: 90px;
  width: auto;
}

#forms form {
  padding: 10px;
}

/*Logo stuff*/

#first-header {
  width: auto;
}

.visualizer {
  background-image: url(<%= asset_path 'music-visualization.jpg' %>);
  background-repeat: no-repeat;
  background-position: center;
  background-position-y: 31px;
}

#logo {
  text-align: center;
}

/*Game Scoreboard */

#game-messages {
  position: relative;
  text-align: center;
}

#score {
  text-align: left;
  padding: 20px;
  /*position: absolute;*/
  left: 15px;
}

#start-game {
  text-align: center;
  margin: 0 auto;
  position: absolute;
  left: 46%;
  display: inline-block;
}

#gameplay-box {
  margin: 0 auto;
  left: 48%;
  position: absolute;
}

/*Music Stuff*/

#squares {
  width: 100%;
  text-align: center;
  margin: 0 auto;
  margin-top: 90px;
}

.square {
  background-color: rgba(0, 0, 0, 0.5);
  padding: 5px;
  border-radius: 50%;
  width: 125px;
  height: 125px;
  border: 3px white solid;
  display: inline-block;
}

